{{#if layoutVM.isLogged}}
<div class="page-head">
    <div class="container">
        <h3>Lịch Sử Mua Hàng</h3>
    </div>
</div>
<!-- //header-bot -->
<!-- container -->

<div class="product-easy">
    <div class="container">
        {{#with custom}}
        <div class="col-md-12 customer-info" style="margin-bottom:20px">
            <h4 class="col-md-3">Họ Và Tên Khách hàng: </h4>
            <a class="col-md-4">{{Name}}</a>
        </div>
        <br>
        <div class="col-md-12 customer-info">
            <h4 class="col-md-3">Địa Chỉ: </h4>
            <a class="col-md-4"> {{Address}}</a>
            <h4 class="col-md-2">Số Điện Thoại: </h4>
            <a class="col-md-2">{{Phone}}</a>
        </div>
        {{/with}}
        <!-- //banner -->
        <div class="col-md-12 bill">
            <div class="table-responsive checkout-right animated wow slideInUp">
                <table class="timetable_sub">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Địa Chỉ Giao</th>
                            <th>Tổng Đơn Hàng</th>
                            <th>Ngày Đặt</th>
                            <th>Tình Trạng</th>
                        </tr>
                    </thead>
                    {{#each bill}}
                    <tr onclick="window.location.href='/account/billdetail/{{Madh}}'">

                        <td>{{Madh}}</td>
                        <td>{{Diachi}}</td>
                        <td>{{Tonghd}}</td>
                        <td>{{Ngaylap}}</td>
                        {{#if Dagiao}}
                        <td>Đã Giao</td>
                        {{else}} {{#if Danggiao}}
                        <td>Đang Giao</td>
                        {{else}}
                        <td>Chưa Giao</td>
                        {{/if}} {{/if}}
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
</div>
{{/if}}