{{#section 'title'}} Login {{/section}}
<div class="login-grids">
    <div class="login">
        <img src="/images/logo.png">
        <div class="login-right">
            <h3>Sign in with your account</h3>
            <form method="POST">
                {{#if flag}}
                <div id="notify" style="color:red">Đăng Nhập Thất Bại!</div>
                {{/if}}
                <br>
                <div class="sign-in">
                    <h4>Email :</h4>
                    <input type="text" name="email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Type here';}" required="">
                </div>
                <div class="sign-in">
                    <h4>Password :</h4>
                    <input type="password" name="password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}"
                        required="">
                </div>
                <div class="sign-in">
                    <button type="submit" class="btn btn-warning">SIGN IN</button>
                </div>
                <br>
                <div class="sign-in">
                    <button type="button" class="btn btn-warning" onclick="window.location.href='/account/register'">Create New Account</button>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
