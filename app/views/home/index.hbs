<div class="container">
     <!-- banner -->
        <div class="banner-grid">
            <div id="visual">
                <div class="slide-visual">
                    <!-- Slide Image Area (1000 x 424) -->
                    <ul class="slide-group">
                        <li>
                            <img class="img-responsive" src="/images/slide1.jpg" alt="Dummy Image" />
                        </li>
                        <li>
                            <img class="img-responsive" src="/images/slide2.jpg" alt="Dummy Image" />
                        </li>
                        <li>
                            <img class="img-responsive" src="/images/slide3.jpeg" alt="Dummy Image" />
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
            <script type="text/javascript" src="/js/pignose.layerslider.js"></script>
            <script type="text/javascript">
                //<![CDATA[
                $(window).load(function () {
                    $('#visual').pignoseLayerSlider({
                        play: '.btn-play',
                        pause: '.btn-pause',
                        next: '.btn-next',
                        prev: '.btn-prev'
                    });
                });
            //]]>
            </script>

        </div>

    <script src="js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion           
                width: 'auto', //auto or any width like 600px
                fit: true // 100% fit in a container
            });
        });
    </script>
    <div class="sap_tabs">
        <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
            <ul class="resp-tabs-list">
                <li class="resp-tab-item" aria-controls="tab_item-0" role="tab">
                    <span>Sản Phẩm mới</span>
                </li>
                <li class="resp-tab-item" aria-controls="tab_item-1" role="tab">
                    <span>Bán Chạy Nhất</span>
                </li>
                <li class="resp-tab-item" aria-controls="tab_item-2" role="tab">
                    <span>Xem nhiều</span>
                </li>
            </ul>
            <div class="resp-tabs-container">
                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                    {{#each new}}
                    <div class="col-md-3 product-men">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item">
                                <img src="images/{{Anh}}/1.jpg" alt="" class="pro-image-front" width="100dp" height="200dp">
                                <img src="images/{{Anh}}/2.jpg" alt="" class="pro-image-back" width="100dp" height="200dp">
                                <span class="product-new-top">New</span>
                            </div>
                            <div class="item-info-product ">
                                <h4>
                                    <a href="detail/{{Masp}}">{{Ten}}</a>
                                </h4>
                                <div class="info-product-price">
                                    <span class="item_price">{{Gia}} VNĐ</span>
                                </div>
                                <form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
                                    <div class="form-group">
                                        <div class="col-sm-4" style="margin-left:60px;">
                                            <input name="proId" type="hidden" value="{{Masp}}">
                                            <input id="txtQ" name="quantity" type="hidden" class="form-control" value="1">
                                            <button class="btn btn-primary" type="submit">
                                                <a class="item_add single-item hvr-outline-out button2">Add to cart</a>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                    {{#each buy}}
                    <div class="col-md-3 product-men">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item">
                                <img src="images/{{Anh}}/1.jpg" alt="" class="pro-image-front" width="100dp" height="200dp">
                                <img src="images/{{Anh}}/2.jpg" alt="" class="pro-image-back" width="100dp" height="200dp">
                                <span class="product-new-top">Top Seller</span>
                            </div>
                             <div class="item-info-product ">
                                <h4>
                                    <a href="detail/{{Masp}}">{{Ten}}</a>
                                </h4>
                                <div class="info-product-price">
                                    <span class="item_price">{{Gia}} VNĐ</span>
                                </div>
                                <form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
                                    <div class="form-group">
                                        <div class="col-sm-4" style="margin-left:60px;">
                                            <input name="proId" type="hidden" value="{{Masp}}">
                                            <input id="txtQ" name="quantity" type="hidden" class="form-control" value="1">
                                            <button class="btn btn-primary" type="submit">
                                                <a class="item_add single-item hvr-outline-out button2">Add to cart</a>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                    {{#each view}}
                    <div class="col-md-3 product-men">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item">
                                <img src="images/{{Anh}}/1.jpg" alt="" class="pro-image-front" width="100dp" height="200dp">
                                <img src="images/{{Anh}}/2.jpg" alt="" class="pro-image-back" width="100dp" height="200dp">
                                <span class="product-new-top">Top View</span>
                            </div>
                           <div class="item-info-product ">
                                <h4>
                                    <a href="detail/{{Masp}}">{{Ten}}</a>
                                </h4>
                                <div class="info-product-price">
                                    <span class="item_price">{{Gia}} VNĐ</span>
                                </div>
                                <form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
                                    <div class="form-group">
                                        <div class="col-sm-4" style="margin-left:60px;">
                                            <input name="proId" type="hidden" value="{{Masp}}">
                                            <input id="txtQ" name="quantity" type="hidden" class="form-control" value="1">
                                            <button class="btn btn-primary" type="submit">
                                                <a class="item_add single-item hvr-outline-out button2">Add to cart</a>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
    </div>
</div>
