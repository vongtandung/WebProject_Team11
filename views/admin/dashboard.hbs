<div class="product-easy">
    <div class="container">

        <script src="js/easyResponsiveTabs.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#horizontalTab').easyResponsiveTabs({
                    type: 'default',
                    width: 'auto',
                    fit: true
                });
            });
        </script>
        <div class="sap_tabs">
            <div id="horizontalTab" style="display: list-item; width: 100%; margin: 0px;">
                <ul class="resp-tabs-list">
                    <li class="resp-tab-item" aria-controls="tab_item-0" role="tab">
                        <span>Quản Lý Sản Phẩm</span>
                    </li>
                    <li class="resp-tab-item" aria-controls="tab_item-1" role="tab">
                        <span>Quản Lý Loại Sản Phẩm</span>
                    </li>
                    <li class="resp-tab-item" aria-controls="tab_item-2" role="tab">
                        <span>Quản Lý Nhà Sản Xuất</span>
                    </li>
                    <li class="resp-tab-item" aria-controls="tab_item-3" role="tab">
                        <span>Quản Lý Đơn Hàng</span>
                    </li>
                </ul>
                <br>
                <br>
                <!--tab 1-->
                <div class="resp-tabs-container">
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                        <div class="page-head">
                            <div class="container">
                                <h3>Quản Lý Sản Phẩm</h3>
                            </div>
                        </div>
                        <br>
                        <br>
                        <!-- //banner -->
                        <div class="bill">
                            <div class="container">
                                <div class="table-responsive checkout-right animated wow slideInUp">
                                    <table class="timetable_sub">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tên</th>
                                                <th>Sản Phẩm</th>
                                                <th>Loại</th>
                                                <th>Nhà Sản Xuất</th>
                                                <th>Giá</th>
                                                <th>Thao Tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each categories}}
                                            <tr>
                                                <td>{{Masp}}</td>
                                                <td>{{Ten}}</td>
                                                <td>
                                                    <img src="images/{{Anh}}" alt="ảnh lỗi" width="50dp" height="60dp" />
                                                </td>
                                                <td>{{Loai}}</td>
                                                <td>{{Nhasx}}</td>
                                                <td>{{Gia}}</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <form action="" method="POST" role="form">
                                                            <div class="form-group">
                                                                <input type="hidden" id="" name="CatID" value='{{Masp}}'>
                                                                <input type="hidden" id="" name="flag" value='1'>
                                                            </div>
                                                            <button type="submit" class=" btn btn-large btn-block btn-danger">
                                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <br>
                                <br>
                                <div style="margin-left:40%">
                                    <div class="col-md-2">
                                        <a href="#1" class="use1" data-toggle="modal" data-target="#add">
                                            <button type="submit"  class="btn btn-large btn-block btn-danger">
                                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                            </button>
                                        </a>
                                    </div>
                                    <div class="col-md-2">
                                        <a href="#1" class="use1" data-toggle="modal" data-target="#edit">
                                            <button type="button" class=" btn btn-large btn-block btn-danger">
                                                <span class="glyphicon glyphicon-erase" aria-hidden="true"></span>
                                            </button>
                                        </a>
                                    </div>
                                </div>

                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                </div>
                <!--tab 2-->
                <div class="resp-tabs-container">
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                        <div class="page-head">
                            <div class="container">
                                <h3>Quản Lý Loại Sản Phẩm</h3>
                            </div>
                        </div>
                        <!-- //banner -->
                        <br>
                        <br>
                        <div class="bill">
                            <div class="container">
                                <div class="table-responsive checkout-right animated wow slideInUp">
                                    <table class="timetable_sub">
                                        <thead>
                                            <tr>
                                                <th>Loại Sản Phẩm</th>
                                                <th>Tổng Sản Phẩm</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each total}}
                                            <tr>
                                                <td>{{Loai}}</td>
                                                <td>{{Tong}}</td>
                                            </tr>
                                            {{/each}}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content modal-info">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-spa">
                <div class="login-grids">
                    <div class="login">
                        <img src="./images/logo.png">
                        <div class="login-right">
                            <h3>ADD NEW CATEGORY</h3>
                            <form action="" method="POST" class="form-horizontal" role="form">
                                <div class="sign-in">
                                    <h4>Product ID</h4>
                                    <input type="text" name="id" required="">
                                </div>
                                <div class="sign-in">
                                    <h4>Product Name</h4>
                                    <input type="text" name="name" required="">
                                </div>
                                <div class="sign-in">
                                    <h4>Type</h4>
                                    <select class="sign-in" name="type" required="">
                                        {{#each type}}
                                        <option>{{Loai}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <br>
                                <div class="sign-in">
                                    <h4>Producer</h4>
                                    <input type="text" name="producer" required="">
                                </div>
                                <div class="sign-in">
                                    <h4>Price</h4>
                                    <input type="text" name="price" required="">
                                </div>
                                <div class="sign-in">
                                    <h4>Detail</h4>
                                    <input type="text" name="detail" required="">
                                </div>
                                <div class="sign-in">
                                    <h4>Hình Ảnh</h4>
                                    <input type="file" name="image" required="">
                                </div>
                                <br>
                                <br>
                                <div class="sign-in">
                                    <button type="submit" class="btn btn-warning">ADD</button>
                                    <button type="button" class="btn btn-warning" onclick="window.location.href='/'">Cancel</button>
                                </div>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content modal-info">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-spa">
                <div class="login-grids">
                    <div class="login">
                        <img src="./images/logo.png">
                        <div class="login-right">
                            <h3>EDIT CATEGORY</h3>
                            <form action="" method="POST" class="form-horizontal" role="form">
                                <div class="sign-in">
                                    <h4>Product ID</h4>
                                    <input type="text" name="id" value='' required="">
                                </div>
                                <div class="sign-in">
                                    <h4>Product Name</h4>
                                    <input type="text" name="name" value=''>
                                </div>
                                <div class="sign-in">
                                    <h4>Type</h4>
                                    <select class="sign-in" name="type" value=''>
                                        {{#each type}}
                                        <option>{{Loai}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <br>
                                <div class="sign-in">
                                    <h4>Producer</h4>
                                    <input type="text" name="producer" value=''>
                                </div>
                                <div class="sign-in">
                                    <h4>Price</h4>
                                    <input type="text" name="price" value=''>
                                </div>
                                <div class="sign-in">
                                    <h4>Detail</h4>
                                    <input type="text" name="detail" value=''>
                                </div>
                                <div class="sign-in">
                                    <h4>Hình Ảnh</h4>
                                    <input type="file" name="image" value=''>
                                </div>
                                <br>
                                <br>
                                <div class="sign-in">
                                    <form action="" method="POST" role="form">
                                        <div class="form-group">
                                            <input type="hidden" id="" name="CatID">
                                            <input type="hidden" id="" name="flag" value='2'>
                                        </div>
                                        <button type="submit" class="btn btn-warning" >EDIT</button>
                                    </form>
                                    <button type="button" class="btn btn-warning" onclick="window.location.href='/'">Cancel</button>
                                </div>

                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>